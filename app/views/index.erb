<!-- index -->
<% if Helper.logged_in?(session) %>
  <!-- LOGGED IN VIEW -->
  <div class="jumbotron">
    <h1>Logged in as <%=Helper.current_user(session).name%></h1>
  <!-- </div> -->

  <br>
  <!-- <div class="row"> -->
    <p class="larger">Welcome to your #1 review site for operating systems!</p>
  </div>
  <!-- STRETCH GOAL: featured reviews -->
  <div class="row">
    <h3>Post a <a href="/reviews/new">New Review</a></h3>
  </div>



<% else %>
  <!-- LOGGED OUT VIEW -->
  <% if flash.has?(:message) %>
    <p class="error"><%=flash[:message]%><p>
  <% end %>
  <div class="jumbotron">
    <h1>Welcome to OS Review!</h1>
    <p class="larger">Your #1 review site for operating systems! Please log in or signup below.</p>
  </div>
  <br>
  <!-- navbar to provide navigation  -->
  <div class="row">
      <a href="/login"><button type="button">Log In</button></a>
      <a class="button-left" href="/signup"><button type="button">Sign Up</button></a>
  </div>

<% end %>
