<!-- reviews/show -->
<% if flash.has?(:message) %>
  <p class="error"><%=flash[:message]%></p>
<% end %>
<div class="jumbotron">
  <h1>Review for <%=@review.operating_system.platform%>: <%=@review.operating_system.name%></h1>
<br>
  <h2>Submitted by <%=@review.user.name%></h2>
</div>
<br>
  <p class="larger review"><%=@review.content%></p>
<br>
  <% if !@review.operating_system.screenshot.empty? %>
    <h3>Screenshot:</h3>
    <img id="screenshot_img" src="<%=@review.operating_system.screenshot%>" alt="Screenshot of <%=@review.operating_system.name%>">
    <br>
  <% end %>

<% if Helper.current_user(session) == @review.user %>
  <a href="/reviews/<%=@review.id%>/edit"><button type="button">Edit</button></a>

  <a class="button-left" href="/reviews/<%=@review.id%>/delete"><button class="btn" type="button">Delete</button></a>
  <br>
<% end %>
